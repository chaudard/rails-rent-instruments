<div class="container" style="color: black">

  <div class="info-container">
    <div>
      <%= cl_image_tag @instrument.image, height: 200, width: 300, crop: :fill %>
    </div>
    <div id="detail">
      <h2><%= @instrument.title %></h2>

      <p>
        Description : <%= @instrument.description %><br>
        Adresse : <%= @instrument.address %>
<!--         <%= @instrument.address %>
  <%= @instrument.zipcode %> - <%= @instrument.city %> -->
      </p>
    </div>
  </div>

  <% if user_signed_in? %>
  <div id="reservation">
    <div>
      <p>Prix / jour : <%= @instrument.price %> EUR</p>
      <p>Total</p>
    </div>

    <div>
      <%= simple_form_for [@instrument, @booking] do |f| %>
      <%= f.input :start_date, as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%d-%m-%Y') }%>
      <%= f.input :end_date, as: :string, input_html: { class: "datepicker", value: Time.now.strftime('%d-%m-%Y') } %>
      <%= f.submit "Book this instrument", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <% else %>
    <p>
      You have to be connected to book an instrument
    </p>
  <% end %>

</div>
